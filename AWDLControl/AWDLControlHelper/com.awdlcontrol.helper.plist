<plist version="1.0">
<dict>
	<key>Label</key>
	<string>com.awdlcontrol.helper</string>

	<key>BundleProgram</key>
	<string>Contents/MacOS/AWDLControlHelper</string>

	<key>AssociatedBundleIdentifiers</key>
	<array>
		<string>com.awdlcontrol.app</string>
		<string>com.awdlcontrol.app.widget</string>
	</array>

	<key>MachServices</key>
	<dict>
		<key>com.awdlcontrol.xpc.helper</key>
		<true/>
	</dict>

	<key>RunAtLoad</key>
	<true/>

	<!-- Run as root to allow ioctl on network interfaces -->
	<key>UserName</key>
	<string>root</string>

	<!-- Keep helper alive for responsive network control -->
	<key>KeepAlive</key>
	<dict>
		<key>SuccessfulExit</key>
		<false/>
	</dict>
</dict>
</plist>
